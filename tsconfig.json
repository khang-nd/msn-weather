{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./build",
        "./node_modules"
    ]
}